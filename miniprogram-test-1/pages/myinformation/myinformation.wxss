/*tab框切换*/
.nav_tab{
  position: fixed;
  bottom:0px;
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
}
.abutton{
margin-top:250rpx;
width:300rpx;
height:60rpx;
border-radius:30rpx;
font-size:40rpx;

}
.show{
  line-height:100rpx;
  text-align:center;
  flex:1;
  color:#333333;
  font-size:28rpx;
  opacity: 0.5;
}
.hidden{
  line-height:100rpx;
  text-align:center;
  color:#ef9ba8;
  flex:1;
  font-size:28rpx;
}
.nav_underline{
  background:#ef9ba8;
  width:54rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
   margin-top:-160rpx;
}

.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
  float: left;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 60rpx;
  float: right;
  align-items: center;
}

.usermotto {
  margin-top: 200px;
}